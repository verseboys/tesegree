<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<!-- 编码转换一定要，不然搜索里面传入的中文值，会显示中文乱码，导致无法搜索到内容 ,正确的写法 -->
		<property name="connection.url">
			jdbc:mysql://localhost:3306/renthouse?useUnicode=true&amp;characterEncoding=UTF-8
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">
			com.mysql.jdbc.Driver.renthouse
		</property>

		<property name="hibernate.current_session_context_class">thread</property>
		<!-- Hibernate显示sql语句的设置 -->
		<property name="show_sql">true</property>
		<!-- Hibernate显示sql语句格式设置 -->
		<property name="format_sql">true</property>

		<!-- 显示数据库执行语句 -->
		<mapping resource="com/renthouse/two/entity/Type.hbm.xml" />
		<mapping resource="com/renthouse/two/entity/House.hbm.xml" />
		<mapping resource="com/renthouse/two/entity/Users.hbm.xml" />
		<mapping resource="com/renthouse/two/entity/Street.hbm.xml" />
		<mapping resource="com/renthouse/two/entity/District.hbm.xml" />

	</session-factory>

</hibernate-configuration>